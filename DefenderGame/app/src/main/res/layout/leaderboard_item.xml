<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recyclerPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="#"
        android:textColor="#76FF03"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initials"
        android:textSize="24sp"
        android:textColor="#76FF03"


        app:layout_constraintEnd_toStartOf="@+id/recyclerLevel"
        app:layout_constraintStart_toEndOf="@+id/recyclerPosition"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Level"
        android:textSize="24sp"
        android:textColor="#76FF03"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Score"
        android:textColor="#76FF03"

        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/recyclerDateTime"
        app:layout_constraintStart_toEndOf="@+id/recyclerLevel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Date / Time"
        android:textColor="#76FF03"

        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>